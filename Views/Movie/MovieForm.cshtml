@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "MovieForm";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movie"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(c => c.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ReleaseYear)
        @Html.TextBoxFor(c => c.ReleaseYear, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.ReleaseYear)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.NumberInStock)
        @Html.TextBoxFor(c => c.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.NumberInStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.GenreId)
        @Html.DropDownListFor(c => c.GenreId,
                new SelectList(Model.Genre, "Id", "Name"), "Select Genre",
                new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.GenreId)
    </div>

    <br/>

    @Html.HiddenFor(c => c.Id)
    
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts {

    @Scripts.Render("~/bundles/jqueryval")   
}